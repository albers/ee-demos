  <!--
    Ab hier folgen Profile für die unterstützten Application Server. Es darf nur eines davon aktiv sein.
  -->
  <profiles>
    <!-- ******************** GlassFish 3.1.x ******************** -->
    <profile>
      <id>glassfish-3.1.x</id>

      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>

      <properties>
        <server.type>glassfish</server.type>
        <server.version>3.1</server.version>
        <server.deploydir>${env.GLF_3_1_X_HOME}/glassfish/domains/domain1/autodeploy</server.deploydir>
        <jndi.properties>
          java.naming.factory.initial=com.sun.enterprise.naming.SerialInitContextFactory
        </jndi.properties>
      </properties>

      <dependencies>
        <dependency>
          <groupId>org.glassfish.appclient</groupId>
          <artifactId>gf-client</artifactId>
          <version>3.1</version>
          <scope>test</scope>
          <exclusions>
            <exclusion>
              <groupId>com.ctc.wstx</groupId>
              <artifactId>woodstox-osgi</artifactId>
            </exclusion>
            <exclusion>
              <groupId>org.eclipse.persistence</groupId>
              <artifactId>org.eclipse.persistence.core</artifactId>
            </exclusion>
            <exclusion>
              <groupId>org.eclipse.persistence</groupId>
              <artifactId>org.eclipse.persistence.jpa</artifactId>
            </exclusion>
            <exclusion>
              <groupId>org.eclipse.persistence</groupId>
              <artifactId>org.eclipse.persistence.jpa.modelgen</artifactId>
            </exclusion>
            <exclusion>
              <groupId>org.eclipse.persistence</groupId>
              <artifactId>org.eclipse.persistence.oracle</artifactId>
            </exclusion>
            <exclusion>
              <groupId>org.eclipse.persistence</groupId>
              <artifactId>org.eclipse.persistence.antlr</artifactId>
            </exclusion>
            <exclusion>
              <groupId>org.eclipse.persistence</groupId>
              <artifactId>org.eclipse.persistence.asm</artifactId>
            </exclusion>
          </exclusions>
        </dependency>
      </dependencies>
    </profile>

    <!-- ******************** JBoss 7.1.x ******************** -->
    <profile>
      <id>jboss-7.1.x</id>

      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>

      <properties>
        <server.type>jboss</server.type>
        <server.version>7.1</server.version>
        <server.deploydir>${env.JBOSS_7_1_X_HOME}/standalone/deployments</server.deploydir>
        <jndi.properties>
          java.naming.provider.url=remote://localhost:4447
          java.naming.factory.initial=org.jboss.naming.remote.client.InitialContextFactory
          java.naming.factory.url.pkgs=org.jboss.naming:org.jnp.interfaces:org.jboss.ejb.client.naming
          java.naming.security.principal=anonymous
          java.naming.security.credentials=anonymous_123
        </jndi.properties>
      </properties>

      <dependencies>
        <dependency>
          <groupId>org.jboss.as</groupId>
          <artifactId>jboss-as-ejb-client-bom</artifactId>
          <version>7.1.1.Final</version>
          <type>pom</type>
          <scope>test</scope>
        </dependency>
      </dependencies>
    </profile>
  </profiles>
